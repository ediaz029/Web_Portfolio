<%- include('layouts/header.ejs') %>

  <br>
  <!-- img start-->
  <div class="container">
    <div class="row">
        <div class="col text-center">
            <img src="imgscarousel/cool.gif" alt="nyc" width="10%">
        </div>
    </div>
  </div>
  <!-- img end -->

  <br>
  <!-- start c ontact from -->
  <div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-5 text-center contactform p-4">
            <form action="/submitContact" method="post">
                <h3 class="mb-4"> Contact Me </h3>
                <input type="text" class="form-control mb-4" name="fname" aria-describedby="FirstName" placeholder="First Name">
                <input type="text" class="form-control mb-4" name="lname" aria-describedby="lastname" placeholder="Last Name">
                <input type="email" class="form-control mb-4" name="email" aria-describedby="emailHelp" placeholder="Email">
                <label for="selection" class="form-label">Reason for Contact: </label>
                <select class="form-select mb-4" aria-label="Default select example" name="reason">
                    <option selected value="Bug">Bug</option>
                    <option value="Opportunity">Opportunity</option>
                    <option value="Connect">Connect</option>
                </select>
                <textarea class="form-control mb-4" name="comment" rows="3" placeholder="Comment"></textarea>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
        </div>
        <div class="col-5">
            <!--Google map-->
            <div id="map-container-google-1" class="z-depth-1-half map-container" style="height: 100%">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3479.252282902259!2d-98.52727652481741!3d29.30427447530465!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x865c57620df39603%3A0x6dd54079639010f1!2sTexas%20A%26M%20University-San%20Antonio!5e0!3m2!1sen!2smx!4v1687494471481!5m2!1sen!2smx" style="width: 100%; height: 100%;" allowfullscreen></iframe>
            </div>
           <!--Google Maps-->
        </div>
    </div>
  </div>

  <br>
  
  <!-- end of contact form -->

